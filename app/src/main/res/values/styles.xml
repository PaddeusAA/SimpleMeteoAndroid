<resources>
    <style name="SwitchSettingTheme" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@android:color/holo_green_light</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@android:color/holo_red_light</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <!-- Стиль для заголовочного текста -->
    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50sp</item>
        <item name="android:fontFamily">@font/fira_sans_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">33sp</item>
    </style>

    <!-- Стиль для кнопок перехода между слоями -->
    <style name="LayerSwitchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:background">@color/clear</item>
        <item name="android:fontFamily">@font/fira_sans_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mainOrange</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Стиль для кнопки запроса погоды -->
    <style name="RequestButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:backgroundTint">@color/mainOrange</item>
        <item name="android:fontFamily">@font/fira_sans_semibold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Стиль для кнопки связи -->
    <style name="ButtonConnect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:fontFamily">@font/fira_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>